        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinner_neigbhours_fragment"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:spinnerMode="dropdown"/>

        <Spinner
            android:id="@+id/spinner_neigbhours_fragment_2"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            android:spinnerMode="dropdown"/>

        <Spinner
            android:id="@+id/spinner_neigbhours_fragment_3"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            android:spinnerMode="dropdown"/>

        <Spinner
            android:id="@+id/spinner_neigbhours_fragment_4"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            android:spinnerMode="dropdown"/>

        <Spinner
            android:id="@+id/spinner_neigbhours_fragment_5"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            android:spinnerMode="dropdown"/>

    </LinearLayout>

</ScrollView>

